!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Brown Sugar"
      %meta{:content => content_for?(:description) ? yield(:description) : "Brown Sugar", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}  
    #container.container
    %header
      .large-12.columns
        %nav.top-bar
          %ul.title-area
            %li.name
              %h1
                %a{:href => "#"}
                  /%img#logo{:src => "http://www.brownsugar.nu/img/logo.png"}/
            %li.toggle-topbar.menu-icon
              %a{:href => "#"}
                %span 
          %section.top-bar-section
            %ul.right
              %li
                %a{:href => "#"} Music            
              %li
                %a{:href => "#"} Photos
              %li
                %a{:href => "#"} Members
              %li
                %a{:href => "#"} Contact                
    #main{:role => "main"}
      = yield
    %footer.row
      .large-12.columns
        %hr/
        .row
          .large-6.columns
            %p Â© Copyright Brown Sugar
          .large-6.columns
            %ul.inline-list.right
              %li
                %a{:href => "#"} Link 1
              %li
                %a{:href => "#"} Link 2
              %li
                %a{:href => "#"} Link 3
              %li
                %a{:href => "#"} Link 4 

